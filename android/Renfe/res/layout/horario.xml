<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:background = "#ffffffff" 
      android:orientation = "vertical"
      xmlns:android="http://schemas.android.com/apk/res/android" >

        <TextView
        	android:id="@+id/info_stations"
            android:text="Estación origen - Estación destino"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor = "#ff000000" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"            
            android:padding="3px" />	

		<LinearLayout
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:background = "#ffffffff" 
		      android:orientation = "horizontal"
		>

	        <TextView
	        	android:id="@+id/info_date"
	            android:text="30/01/2010"
	            android:textSize="15sp"
	            android:textStyle="bold"
	            android:textColor = "#ff000000"
	            android:layout_width="wrap_content"
	      		android:layout_height="wrap_content"
	      		android:gravity="left"
	      		android:paddingLeft="3px"
	      		android:paddingTop="6px"
	            android:layout_marginTop="5px" />	
	            
	        <Button
	            android:id="@+id/btn_change"
	            android:layout_gravity="right"
	            android:layout_width="wrap_content"
	            android:layout_height="60px"
	            android:gravity="right"
	            android:layout_marginLeft="10px"
	            android:text="Viaje de vuelta"
	        />      
        
        </LinearLayout>      
        
        <TextView
        	android:id="@+id/info_transbordo"
            android:textSize="15sp"
            android:textColor = "#ff000000" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"  
		    android:visibility="invisible"      
            android:padding="3px" />          
 
 
<ScrollView
	android:id="@+id/scrollview"
	android:background = "#ffffffff" 
	android:orientation="vertical"
	android:layout_marginTop="5px"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
> 

	<TableLayout 
	    android:id="@+id/myTableLayout"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
    >

		<TableRow
			android:background = "#ffd9e2f3"
		>
		
	        <TextView
	            android:text="@string/station1_salida"
	            android:gravity="center_horizontal"
	            android:textSize="14sp"
	            android:textStyle="bold"
	            android:textColor = "#ff000000" 
	            android:padding="3px" />

	        <TextView
	            android:text="@string/station2_llegada"
	            android:gravity="center_horizontal"
	            android:textSize="14sp"
	            android:textStyle="bold"
	            android:textColor = "#ff000000"
	            android:padding="3px" />
	            
	        <TextView
	            android:text="@string/tiempo"
	            android:gravity="center_horizontal"
	            android:textSize="14sp"
	            android:textStyle="bold"
	            android:textColor = "#ff000000" 
	            android:padding="3px" />

	        <TextView
	            android:text="@string/linea_salida"
	            android:gravity="center_horizontal"
	            android:textSize="14sp"
	            android:textStyle="bold"
	            android:textColor = "#ff000000"
	            android:padding="3px" />	            

		</TableRow>
	
	</TableLayout>

</ScrollView>

</LinearLayout>